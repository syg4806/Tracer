<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/listTitleLinearLayout">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="map"
            android:gravity="center"
            android:layout_weight="2"
            style="@style/ListTitle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="실행수"
            android:gravity="center"
            android:layout_weight="2"
            style="@style/ListTitle"/>
    </LinearLayout>

    <TextView
        android:layout_below="@id/listTitleLinearLayout"
        android:id="@+id/divisionTextView"
        style="@style/divisionTextView">
    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/divisionTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rank_recycler_map">
    </androidx.recyclerview.widget.RecyclerView>




</RelativeLayout>