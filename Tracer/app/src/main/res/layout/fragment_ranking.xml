<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:elevation="2dp"
            android:minHeight="?attr/actionBarSize"
            android:background="@drawable/ic_bar_ranking">
        </Toolbar>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rankingFragmentMonthTextView"
            style="@style/blackBoldText20"
            android:gravity="center"/>

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rankingFragmentPopularTextView"
            android:text="월간인기차트"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:textStyle="bold"
            android:gravity="center"/>

    <LinearLayout
        android:layout_below="@+id/rankingFragmentMonthTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/listTitleLinearLayout"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="순위"
            android:gravity="center"
            android:layout_weight="0.5"
            style="@style/ListTitle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="map 이름"
            android:gravity="center"
            android:layout_weight="2"
            style="@style/ListTitle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="실행수"
            android:gravity="center"
            android:layout_weight="2"
            style="@style/ListTitle"/>
    </LinearLayout>

    <TextView
        android:layout_below="@id/listTitleLinearLayout"
        android:id="@+id/divisionTextView"
        style="@style/divisionTextView">
    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/divisionTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rank_recycler_map">
    </androidx.recyclerview.widget.RecyclerView>



    </LinearLayout>
</RelativeLayout>