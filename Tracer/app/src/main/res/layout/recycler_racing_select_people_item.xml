<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/white"
  android:paddingTop="5dp"
  android:paddingBottom="5dp">

  <TextView
    android:id="@+id/rankRecyclerItemClickCountTextView"
    android:layout_width="0dp"
    android:layout_height="35dp"
    android:layout_weight="0.5"
    android:background="@drawable/ic_ranking_1st_emblem"
    android:gravity="center"
    android:textColor="@color/black"
    android:textSize="15dp"
    android:textStyle="bold" />

  <TextView
    android:id="@+id/rankRecyclerItemClickChallengerNicknameTextView"
    style="@style/ListDetail"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="2"
    android:ellipsize="marquee"
    android:paddingLeft="25dp"
    android:singleLine="true" />

  <TextView
    android:id="@+id/rankRecyclerItemClickTimeTextView"
    style="@style/ListDetail"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="2"
    android:gravity="center" />

  <ImageView
    android:id="@+id/selectPeopleCheckImage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/ic_check_24dp"
    android:paddingEnd="10dp"
    android:visibility="invisible" />

</LinearLayout>
