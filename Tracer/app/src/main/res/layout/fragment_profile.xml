<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:elevation="1dp"
            android:background="@color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:gravity="center"
                android:text="Profile"
                style="@style/appBarText">

            </TextView>
        </Toolbar>

        <LinearLayout
            android:id="@+id/profileFragmentLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_profile_logo" />

            <TextView
                android:id="@+id/profileIdTextView"
                style="@style/blackBoldText20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/notosansmedium"/>
        </LinearLayout>


        <TextView
            android:id="@+id/profileFragmentMyData"
            style="@style/ListDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileFragmentLinearLayout"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/textlines"
            android:padding="10dp"
            android:text="내 통계" />

        <LinearLayout
            android:id="@+id/rankingDetailInfoLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileFragmentMyData"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="40dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/ListDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="총 거리" />

                <TextView
                    android:id="@+id/profileFragmentTotalDistance"
                    style="@style/ListDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosansmedium" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/ListDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="총 주행시간" />

                <TextView
                    android:id="@+id/profileFragmentTotalTime"
                    style="@style/ListDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosansmedium"/>

            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/divisionTextView"/>

            <TextView
                android:id="@+id/profileRouteTextView"
                style="@style/ListDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:text="나의 루트" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/profileRouteTextView"
                android:layout_centerVertical="true"
                android:paddingTop="5dp"
                android:text=">  "
                android:textSize="18dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/divisionTextView"/>

            <TextView
                android:id="@+id/profileRecordTextView"
                style="@style/ListDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:text="나의 활동" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/profileRecordTextView"
                android:layout_centerVertical="true"
                android:paddingTop="5dp"
                android:text=">  "
                android:textSize="18dp" />


        </RelativeLayout>

        <TextView
            style="@style/divisionTextView"/>

    </LinearLayout>
</RelativeLayout>