<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="300dp"
  android:layout_height="400dp"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:background="@color/white"
  android:orientation="vertical"
  android:layout_gravity="center">

  <TextView
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="지역선택"
    android:textSize="20dp"
    android:gravity="center"
    android:textStyle="bold"
    android:background="@drawable/textlines"/>


  <LinearLayout
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

   <LinearLayout
     android:layout_width="30dp"
     android:layout_height="match_parent"
     android:gravity="center"
     android:orientation="vertical">

     <TextView
       android:id="@+id/All"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="전국"
       android:gravity="center"
       android:textSize="15dp"
       android:background="@drawable/textlines"
       android:layout_weight="1"/>

     <TextView
       android:id="@+id/Seoul"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="서울"
       android:gravity="center"
       android:textSize="15dp"
       android:background="@drawable/textlines"
       android:layout_weight="1"/>
     <TextView
       android:id="@+id/Incheon"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="인천"
       android:gravity="center"
       android:textSize="15dp"
       android:background="@drawable/textlines"
       android:layout_weight="1"/>
     <TextView
       android:id="@+id/Gyeongi"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="경기"
       android:gravity="center"
       android:textSize="15dp"
       android:background="@drawable/textlines"
       android:layout_weight="1"/>
     <TextView
       android:id="@+id/Daejeon"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="대전"
       android:gravity="center"
       android:textSize="15dp"
       android:background="@drawable/textlines"
       android:layout_weight="1"/>
     <TextView
       android:id="@+id/Daegu"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="대구"
       android:gravity="center"
       android:textSize="15dp"
       android:background="@drawable/textlines"
       android:layout_weight="1"/>
     <TextView
       android:id="@+id/Busan"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="부산"
       android:gravity="center"
       android:textSize="15dp"
       android:background="@drawable/textlines"
       android:layout_weight="1"/>
     <TextView
       android:id="@+id/Gangwon"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="강원"
       android:gravity="center"
       android:textSize="15dp"
       android:background="@drawable/textlines"
       android:layout_weight="1"/>
     <TextView
       android:id="@+id/Gwangju"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="광주"
       android:gravity="center"
       android:textSize="15dp"
       android:background="@drawable/textlines"
       android:layout_weight="1"/>
     <TextView
       android:id="@+id/Ulsan"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="울산"
       android:gravity="center"
       android:textSize="15dp"
       android:background="@drawable/textlines"
       android:layout_weight="1"/>
     <TextView
       android:id="@+id/Gyungnam"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="경남"
       android:gravity="center"
       android:textSize="15dp"
       android:background="@drawable/textlines"
       android:layout_weight="1"/>
     <TextView
       android:id="@+id/Gyungbuk"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="경북"
       android:gravity="center"
       android:textSize="15dp"
       android:background="@drawable/textlines"
       android:layout_weight="1"/>
     <TextView
       android:id="@+id/Jeonnam"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="전남"
       android:gravity="center"
       android:textSize="15dp"
       android:background="@drawable/textlines"
       android:layout_weight="1"/>
     <TextView
       android:id="@+id/Jeonbuk"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="전북"
       android:gravity="center"
       android:textSize="15dp"
       android:background="@drawable/textlines"
       android:layout_weight="1"/>
     <TextView
       android:id="@+id/Jeju"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="제주"
       android:gravity="center"
       android:textSize="15dp"
       android:background="@drawable/textlines"
       android:layout_weight="1"/>



    </LinearLayout>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:gravity="center"
      android:layout_weight="6"
      android:orientation="vertical">

      <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/challenge_local"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        app:layoutManager="GridLayoutManager"/>

    </LinearLayout>
  </LinearLayout>
</LinearLayout>