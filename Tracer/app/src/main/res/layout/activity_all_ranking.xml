<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".main.start.racing.AllRankingActivity">

  <Toolbar
    android:id="@+id/AllRankingToolBar"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_alignParentTop="true"
    android:background="@color/white"
    android:contentInsetStart="0dp"
    android:elevation="1dp">

    <TextView
      style="@style/appBarText"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="전체 랭킹" />
  </Toolbar>

  <TextView
    android:id="@+id/allRankingTextView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/AllRankingToolBar"
    android:layout_marginStart="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="20dp"
    android:text="@string/selectCompare"
    android:textColor="@color/lightblack"
    android:textSize="16dp" />

  <androidx.recyclerview.widget.RecyclerView
    style="@style/subjectRelativeLayoutStyle"
    android:paddingTop="0.1dp"
    android:paddingBottom="0.1dp"
    android:id="@+id/resultPlayerRankingRecycler"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/allRankingTextView"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp" />

</RelativeLayout>