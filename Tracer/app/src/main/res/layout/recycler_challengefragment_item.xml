<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/challenge_cardview"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  app:cardCornerRadius="8dp"
  app:cardElevation="10dp"
  app:cardPreventCornerOverlap="true"
  app:cardUseCompatPadding="true">

  <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
      android:id="@+id/challenge_date"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:text="2020"
      android:textColor="@color/blackgray"
      android:textSize="17dp" />


    <ImageView
      android:id="@+id/challenge_map"
      android:layout_width="150dp"
      android:layout_height="150dp"
      android:layout_below="@+id/challenge_date"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="5dp"
      android:scaleType="fitXY"
      android:src="@drawable/login_image" />

    <TextView
      android:id="@+id/challenge_race_name"
      android:layout_width="150dp"
      android:layout_height="wrap_content"
      android:layout_below="@id/challenge_map"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="10dp"
      android:text="경기 이름"
      android:textColor="@color/lightblack"
      android:textStyle="bold" />

    <LinearLayout
      android:gravity="right"
      android:layout_width="150dp"
      android:layout_height="wrap_content"
      android:layout_below="@id/challenge_race_name"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/challengeTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="# " />


      <TextView
        android:id="@+id/challenge_locale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서울" />

    </LinearLayout>
  </RelativeLayout>

</androidx.cardview.widget.CardView>