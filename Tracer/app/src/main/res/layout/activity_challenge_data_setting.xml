<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".main.challenge.ChallengeDataSettingActivity">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <EditText
      android:id="@+id/challenge1"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:hint="대회 이름" />

    <EditText
      android:id="@+id/challenge2"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:hint="대회 일자" />

    <EditText
      android:id="@+id/challenge3"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:hint="접수 시작" />

    <EditText
      android:id="@+id/challenge4"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:hint="접수 마감" />

    <EditText
      android:id="@+id/challenge5"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:hint="지역" />

    <EditText
      android:id="@+id/challenge6"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:hint="대회 주소" />

    <EditText
      android:id="@+id/challenge7"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:hint="주최" />

    <EditText
      android:id="@+id/challenge8"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:hint="정보" />

    <EditText
      android:id="@+id/challenge9"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:hint="경기 규칙" />

    <EditText
      android:id="@+id/challenge10"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:hint="대회 종목" />

    <EditText
      android:id="@+id/challenge11"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:hint="링크" />

    <EditText
      android:id="@+id/challenge12"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:hint="카테고리" />

    <Button
      android:id="@+id/challengeButton"
      android:layout_width="200dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:text="정보저장" />
  </LinearLayout>
</ScrollView>