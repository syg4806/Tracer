<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="5dp">

  <TextView
    android:id="@+id/rankingFragmentCountTextView"
    android:layout_width="0dp"
    android:layout_height="35dp"
    android:layout_weight="0.5"
    android:background="@drawable/ic_ranking1_black"
    android:fontFamily="@font/notosansmedium"
    android:gravity="center"
    android:textColor="@color/black"
    android:textSize="15dp"
    android:textStyle="bold" />

  <TextView
    android:id="@+id/rankingFragmentMapTitleTextView"
    style="@style/ListDetail"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="2.3"
    android:ellipsize="marquee"
    android:paddingLeft="25dp"
    android:singleLine="true" />

  <TextView
    android:id="@+id/rankingFragmentDistanceTextView"
    style="@style/ListDetail"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="2"
    android:gravity="center" />

  <ImageView
    android:id="@+id/rankingFragmentHeartImageView"
    style="@style/ListDetail"
    android:layout_width="0dp"
    android:layout_height="24dp"
    android:layout_weight="0.4"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:gravity="center" />

  <TextView
    android:id="@+id/rankingFragmentExecuteTextView"
    style="@style/ListDetail"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center_vertical" />

</LinearLayout>
