<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/rankingFragmentCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:fontFamily="@font/notosansmedium"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/ic_1"/>

    <TextView
        android:id="@+id/rankingFragmentMapTitleTextView"
        android:layout_marginLeft="25dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.8"
        android:text="asdf"
        android:singleLine="true"
        android:ellipsize="marquee"
        style="@style/ListDetail"/>

    <TextView
        android:id="@+id/rankingFragmentExecuteTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:text="asdf"
        android:gravity="center"
        style="@style/ListDetail"/>

</LinearLayout>
