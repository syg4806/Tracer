<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/white"
  android:paddingTop="7dp"
  android:paddingBottom="7dp">

  <TextView
    android:id="@+id/rankingFragmentCountTextView"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:background="@drawable/ic_ranking_1st_emblem"
    android:gravity="center"
    android:paddingBottom="2dp"
    android:textSize="15dp"
    android:textStyle="bold" />


  <TextView
    android:id="@+id/rankingFragmentMapTitleTextView"
    style="@style/rankingItem"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="3"
    android:ellipsize="marquee"
    android:paddingStart="10dp"
    android:singleLine="true" />

  <TextView

    android:id="@+id/rankingFragmentDistanceTextView"
    style="@style/underSubjectName"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="2"
    android:gravity="right"
    android:text="test" />

  <LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1.5"
    android:gravity="start">

    <ImageView
      android:id="@+id/rankingFragmentModeImageView"
      style="@style/underSubjectName"
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:layout_gravity="center_vertical"
      android:layout_marginStart="15dp"
      android:layout_marginEnd="5dp"
      android:src="@drawable/ic_favorite_border_black_24dp" />

    <TextView
      android:id="@+id/rankingFragmentModeTextView"
      style="@style/ListDetail"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center_vertical"
      android:text="asd" />
  </LinearLayout>
</LinearLayout>
