<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/profileFragmentHistoryProfile"
        android:scaleType="fitXY"
        android:background="@color/gray"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="25dp">

        <TextView
            android:gravity="center"
            android:id="@+id/profileFragmentHistoryTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asdf"
            android:singleLine="true"
            android:ellipsize="marquee"
            style="@style/blackMediumText18"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/profileFragmentHistoryTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="떨어진 거리 표시"
                android:textColor="#6799FF"
                android:textStyle="bold"
                android:textSize="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" km"
                style="@style/ListDetail"/>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>
