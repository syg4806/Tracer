<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:layout="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".start.RunningActivity"
    android:orientation="vertical"
    android:weightSum="100">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:elevation="2dp"
        android:minHeight="?attr/actionBarSize"
        android:background="@drawable/ic_bar_running">
    </Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/map_viewer"
            tools:context=".fragment.MapFragment"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_centerInParent="true"/>

        <hollowsoft.slidingdrawer.SlidingDrawer
            android:id="@+id/drawer"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            layout:content="@+id/content"
            layout:handle="@+id/runningHandle"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="70dp">
            <!--
            <Button
                android:id="@+id/runningHandle"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:background="@drawable/extend_selector"
                android:gravity="center" />
                -->
            <Button
                android:id="@+id/runningHandle"
                android:layout_width="70dp"
                android:layout_height="27dp"
                android:background="@drawable/button_white_background"
                android:text="â–²"
                android:textColor="@color/red"
                android:textSize="15dp"
                android:gravity="center" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1.0"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/ListDetail"
                            android:text="DISTANCE (km)"/>

                        <TextView
                            android:gravity="center"
                            android:id="@+id/runningDistanceTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0.00"
                            style="@style/blackMediumText18" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            style="@style/ListDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TIME" />

                        <Chronometer
                            android:id="@+id/runningTimerTextView"
                            style="@style/blackMediumText18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1.0"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SPEED (km/h)"
                            style="@style/ListDetail"/>

                        <TextView
                            android:gravity="center"
                            android:id="@+id/runningSpeedTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0.0"
                            style="@style/blackMediumText18"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </hollowsoft.slidingdrawer.SlidingDrawer>
    </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:id="@+id/yamae"/>
    <LinearLayout
        android:layout_centerHorizontal="true"
        android:id="@+id/runningNotificationLayout"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:visibility="gone"
        android:background="#990044FF"
        android:layout_below="@id/yamae">
        <TextView
            android:id="@+id/runningNotificationTextView"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:gravity="center"
            android:layout_height="match_parent"
            android:fontFamily="@font/notosansmedium"
            android:textSize="15dp"
            android:textColor="@color/white"
            />
        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
        </LinearLayout>

    </LinearLayout>
    <FrameLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <Button
            android:id="@+id/btn_start"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:background="@drawable/button_background"
            style="@style/buttonText"
            android:text="START"
            android:onClick="onClick"
            android:gravity="center"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btn_stop"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:background="@drawable/button_background"
                style="@style/buttonText"
                android:text="STOP"
                android:onClick="onClick"
                android:gravity="center"
                android:visibility="invisible"
                />
            <Button
                android:layout_marginLeft="20dp"
                android:id="@+id/btn_pause"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:background="@drawable/button_empty_background"
                style="@style/buttonTextRedText"
                android:text="PAUSE"
                android:onClick="onClick"
                android:gravity="center"
                android:visibility="invisible"/>
        </LinearLayout>


        <!--Button
            android:id="@+id/btn_stop"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:background="@drawable/button_background"
            style="@style/buttonText"
            android:text="STOP"
            android:onClick="onClick"
            android:gravity="center"
            /-->
        <!--Button
            android:layout_marginLeft="20dp"
            android:id="@+id/btn_pause"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:background="@drawable/button_empty_background"
            style="@style/buttonTextRedText"
            android:text="PAUSE"
            android:onClick="onClick"
            android:gravity="center" /-->

    </FrameLayout>
</RelativeLayout>