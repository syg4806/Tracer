<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.korea50k.RunShare">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_foreground"
        android:label="Tracer"
        android:roundIcon="@mipmap/ic_launcher_foreground"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".Activities.Profile.SettingActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".Activities.Profile.MyInformationActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.korea50k.RunShare.Activities.Splash.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.korea50k.RunShare.Activities.Join.AgeSelectActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.korea50k.RunShare.Activities.Join.GenderSelectActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.korea50k.RunShare.Activities.Join.SignUpActivity"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.Login.LoginActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.Profile.UserActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.RankFragment.RunThisMapActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.FeedFragment.FeedRecyclerClickActivityMap"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.RankFragment.RankRecyclerClickActivity" />
        <activity android:name=".Activities.Racing.RacingActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.Racing.RacingFinishActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Activities.Running.RunningSaveActivity"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait"/>
        <activity
            android:screenOrientation="portrait"
            android:name=".Activities.Running.RunningActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_running"
            android:theme="@style/FullscreenTheme" />
        <activity android:name=".Activities.MainFragment.MainActivity">
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false"/>
    </application>

</manifest>