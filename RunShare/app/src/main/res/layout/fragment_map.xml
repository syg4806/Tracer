<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".Activities.MainFragment.MapFragment">

    <fragment
        android:id="@+id/map_viewer"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        tools:context=".fragment.MapFragment" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/start_btn"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/base_button_selector"
            android:drawableLeft="@drawable/ic_play_pressed"
            android:text="  START"
            android:fontFamily="@font/godob"
            android:textColor="#FF0000"
            android:onClick="onClick"
            android:layout_margin="10dp"
            android:paddingLeft="37dp"
            android:gravity="center_vertical|left"/>
        <Button
            android:id="@+id/race_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Race"
            android:fontFamily="@font/godob"
            android:onClick="onClick"/>
    </LinearLayout>

</RelativeLayout>