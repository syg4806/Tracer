<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activities.MainFragment.RankFragment">
    <TextView
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="FEED"
        android:textColor="@color/black"
        android:fontFamily="@font/godob"
        android:textStyle="bold"
        android:textSize="50dp"
        android:id="@+id/feed_title_textview"/>

    <Button
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/feed_title_textview"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_down_button"
        android:layout_alignBaseline="@+id/feed_title_textview"
        android:id="@+id/feed_choiceoption_button"/>


    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/feed_title_textview"
        android:id="@+id/feed_framelayout"
        android:layout_marginTop="10dp">

        <View
            android:id="@+id/indicator"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/gradient_bg"/>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_feed"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/tab_bg"
            app:tabGravity="fill"
            app:tabMode="fixed"
            app:tabSelectedTextColor="#ffffff"
            app:tabIndicatorColor="@null"
            app:tabRippleColor="@null"/>

    </FrameLayout>


    <androidx.viewpager.widget.ViewPager
        android:layout_marginTop="15dp"
        android:layout_below="@+id/feed_framelayout"
        android:id="@+id/feed_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@drawable/option_bg"
        android:layout_marginRight="20dp"
        android:id="@+id/feed_ExecuteLikeChoice_linearlaoyut"
        android:layout_below="@+id/feed_choiceoption_button"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/feed_executeOption_radioButton"
                android:fontFamily="@font/godob"
                android:text="전체공개"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/feed_likeOption_radioButton"
                android:fontFamily="@font/godob"
                android:text="팔로워"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RadioGroup>

    </LinearLayout>
</RelativeLayout>