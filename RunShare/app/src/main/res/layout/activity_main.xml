<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"/>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabDots"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="10dp"
            app:tabBackground="@drawable/tab_selector"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp"
            app:tabMaxWidth="10dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_margin="10dp"
            android:id="@+id/openDrawerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            app:backgroundTint="#00000000"
            android:src="@drawable/ic_menu_button_unpressed"
            app:elevation="0dp"
            android:onClick="onClick"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/drawer"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:background="#ffffff"
        android:layout_gravity="start">

        <Button
            android:id="@+id/closeDrawerButton"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/ic_menu_button_pressed"
            style="?android:attr/borderlessButtonStyle"
            android:onClick="onClick"/>

        <LinearLayout
            android:layout_below="@+id/closeDrawerButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <LinearLayout
                android:onClick="onClick"
                android:id="@+id/slide_profileLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/slideProfileImageView"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="#00000000"
                    />

                <TextView
                    android:id="@+id/slideProfileIdTextView"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="playerID"
                    android:fontFamily="@font/godob"
                    android:textSize="20dp"/>

            </LinearLayout>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/closeDrawerButton"
                android:fontFamily="@font/godob"
                android:text="내 기록"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:id="@+id/myprofile"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/roundrectagle_gray_background">
                <TextView
                    android:paddingLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="총 주행거리"
                    android:textColor="@color/white"
                    android:fontFamily="@font/godob"
                    android:textSize="15dp"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:paddingRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00 Km"
                    android:textColor="@color/white"
                    android:fontFamily="@font/godob"
                    android:textSize="20dp"
                    android:id="@+id/slideDistanceTextView"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/roundrectagle_gray_background">
                <TextView
                    android:paddingLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="총 주행시간"
                    android:textColor="@color/white"
                    android:fontFamily="@font/godob"
                    android:textSize="15dp"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:paddingRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00:00"
                    android:textColor="@color/white"
                    android:fontFamily="@font/godob"
                    android:textSize="20dp"
                    android:id="@+id/slideTimeTextView"/>
            </LinearLayout>

