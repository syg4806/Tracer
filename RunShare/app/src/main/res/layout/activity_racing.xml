<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:layout="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Racing.RacingActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/map_viewer"
            tools:context=".fragment.MapFragment"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_centerInParent="true"/>

        <hollowsoft.slidingdrawer.SlidingDrawer
            android:id="@+id/drawer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout:content="@+id/content"
            layout:handle="@+id/handle"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="?actionBarSize">
            <Button
                android:id="@+id/handle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="▲" />
            <LinearLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="#44444444"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Km"
                        android:textSize="24.0dip" />
                    <TextView
                        android:id="@+id/running_distance_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0.00"
                        android:textSize="24.0dip" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="#44444444"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="시간"
                        android:textSize="24dp" />
                    <Chronometer
                        android:id="@+id/timer_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="24dp" />
                </LinearLayout>
            </LinearLayout>
        </hollowsoft.slidingdrawer.SlidingDrawer>
    </RelativeLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="bottom">
        <Button
            android:id="@+id/btn_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/base_button_selector"
            android:textColor="#FF0000"
            android:text="Stop"
            android:onClick="onClick"
            android:visibility="invisible"
            android:drawableLeft="@drawable/ic_stop_icon_pressed"
            android:paddingLeft="37dp"
            android:gravity="center_vertical|left"
            android:layout_margin="10dp"
            />
    </LinearLayout>
</RelativeLayout>