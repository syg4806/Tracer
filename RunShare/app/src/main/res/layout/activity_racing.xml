<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:layout="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Racing.RacingActivity">

    <fragment
        android:id="@+id/map_viewer"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        tools:context=".fragment.MapFragment" />

    <hollowsoft.slidingdrawer.SlidingDrawer
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="?actionBarSize"
        layout:content="@+id/content"
        layout:handle="@+id/racingHandle">

        <Button
            android:id="@+id/racingHandle"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:background="@drawable/extend_selector"
            android:gravity="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_main_infobar">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/info_text"
                        android:text="DISTANCE"/>

                    <TextView
                        android:id="@+id/racingDistanceTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        style="@style/info_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1.0"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TIME"
                        style="@style/info_text"/>

                    <Chronometer
                        android:id="@+id/racingTimerTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/info_text"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1.0"
                    android:background="#FFFFFFFF"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SPEED"
                        style="@style/info_text"/>

                    <TextView
                        android:id="@+id/racingSpeedTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0.0"
                        style="@style/info_text"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </hollowsoft.slidingdrawer.SlidingDrawer>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:gravity="center">

        <Button
            android:id="@+id/racingControlButton"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/base_button_selector"
            android:drawableLeft="@drawable/ic_play_pressed"
            android:gravity="center_vertical|left"
            android:onClick="onClick"
            android:paddingLeft="45dp"
            android:text="  START"
            android:textColor="#FF0000" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/racingNotificationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/racingNotificationButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#440044FF"
            android:clickable="false"
            android:gravity="center"
            android:text="시작 포인트로 이동하십시오.\n시작포인트까지 남은거리 : "
            android:fontFamily="@font/godob"/>
    </LinearLayout>

    <TextView
        android:id="@+id/countDownTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="#4400FF00"
        android:gravity="center"
        android:text="3"
        android:textColor="#FFFFFF"
        android:textSize="100sp"
        android:textStyle="bold"
        android:visibility="gone" />

</RelativeLayout>